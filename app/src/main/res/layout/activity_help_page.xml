<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic2"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="341dp"
        android:layout_height="92dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="294dp"
        android:textColor="@color/white"
        android:text="It is as simple as giving a cat thumbs up, or thumbs down. If you get bored with cats then move over to the rating of our dogs. "
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/btncats"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:text="Cats"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/btndogs"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="154dp"
        android:layout_marginBottom="5dp"
        android:text="Dogs"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/btnhelp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="5dp"
        android:text="Help"
        android:textSize="30dp" />

    <ImageView
        android:layout_width="450dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="414dp"
        app:srcCompat="@drawable/thumbs_pic" />
</RelativeLayout>